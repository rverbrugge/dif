div#list ul {
	margin						: 5px 5px 5px 15px;
	padding						: 5px 5px 5px 15px;
}

div#list li {
	padding						: 3px;
}

div.datepicker {
	text-align: center;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	margin-top: 0px;
	margin-bottom: 20px;
	padding: 10px;
	border					: 1px solid <?=$clr_dark;?>;
	background-color	: <?=$clr_sub_light;?>;
	font-weight			: strong;
	width 					: 200px;
}

div.datepicker:hover {
	background-color	: <?=$clr_site;?>;
	color							: <?=$clr_sub_font;?>;
}

div#dateselect {
	width							: 200px;
}

hr#datespace {
	color : <?=$clr_sub_dark;?>;
	background-color: <?=$clr_sub_dark;?>;
	height: 1px;
	border : none;
	margin						: 15px 0 15px 0;
}

h2.dateheading {
	color							: <?=$clr_sub_font;?>;
	border-bottom			: 1px solid <?=$clr_sub_dark;?>;
	margin-top			: 15px;
	margin-bottom			: 6px;
}
input#datevalue {
	background-image	: url(<?=$plugin_path;?>images/calendar.gif);
	background-position : 73px center;
	background-repeat : no-repeat;
	width								: 89px;
	cursor							: pointer;
}

table.multibox {
	width						: 100%;
}

table.multibox select {
	width						: 325px;
}


table.multibox td.nav {
	vertical-align		: middle;
	text-align				: center;
	width						: 100%;
}

table.multibox td.nav input {
	margin						: 5px auto 5px auto;
	display						: block;
}

div#userpane {
	background-color	: <?=$clr_sub_light;?>;
	border						: 1px solid <?=$clr_dark;?>;
	padding						: 5px;
	position					: absolute;
	top								: 340px;
	margin-left				: 80px;
	width							: 300px;
}

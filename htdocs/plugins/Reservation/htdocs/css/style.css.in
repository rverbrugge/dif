

div#datevalue { display : none; }

div#times table {
	border-collapse		: collapse;
	background-color	: <?=$clr_sub_light;?>;
	width : 100%;
}

div#times table td {
	border						: 1px solid <?=$clr_dark;?>;
	padding						: 3px 5px 3px 5px;
}
div#times table td.time {
	width							: 35px;
}

div#times table th {
	border-bottom			: 2px solid <?=$clr_dark;?>;
	padding						: 3px 5px 3px 5px;
	background-color	: <?=$clr_site;?>;
}


div#times img {
	border						: none;
	display						: inline;
	vertical-align		: bottom;
}

div#userpane div#searchform {
	/*text-align				: center;*/
	border-bottom			: 1px solid <?=$clr_dark;?>;
	border-top			: 1px solid <?=$clr_dark;?>;
	margin						: 5px;
	padding						: 5px;
}
div#userpane p#navigation {
	margin						: 5px;
	letter-spacing		: 2px;
}

div#userpane p#navigation a {
	margin						: 0 3px 0 3px;
}
div#userpane a#close {
	float							: right;
}
div#userpane a#close img {
	border						: none;
}

